<% content_for :title, "Sandbox" %>

<main>
  <article data-controller="lexxy-output" data-action="lexxy:change->lexxy-output#refresh">
    <section aria-label="Editor">
      <header>
        <h2>Editor</h2>
      </header>

      <div>
        <%= rich_text_area_tag :sandbox, nil, placeholder: "Write something...", data: { lexxy_output_target: "editor" } do %>
          <lexxy-prompt trigger="@" src="<%= people_path %>" name="mention"></lexxy-prompt>
        <% end %>
      </div>
    </section>

    <section aria-label="Output">
      <header>
        <h2>Output</h2>
      </header>

      <div data-lexxy-output-target="output">

      </div>
    </section>
  </article>
</main>
