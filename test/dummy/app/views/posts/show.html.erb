<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @post %>">
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p data-controller="code-highlight">
    <strong>Body:</strong>
    <%= @post.body %>
  </p>
</div>

<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete %>
</div>
