<%= form_with(model: post) do |form| %>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>

    <lexical-toolbar id="the-toolbar">
      <!-- Inline formatting -->
      <button data-command="bold">Bold</button>
      <button data-command="italic">Italic</button>

      <!-- Block-level formatting -->
      <button data-command="formatElement" data-payload="h1">Heading</button>
      <button data-command="formatElement" data-payload="quote">Quote</button>
      <button data-command="insertCodeBlock">Code Block</button>

      <!-- Tables -->
      <button data-command="insertTable">Table</button>

      <!-- Lists -->
      <button data-command="insertUnorderedList">â€¢ Bullet List</button>
      <button data-command="insertOrderedList">1. Numbered List</button>
    </lexical-toolbar>

    <%= form.rich_text_area :body, toolbar: "the-toolbar" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
